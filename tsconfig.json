{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "paths": {
      "@app/*": ["./*"],
      "@/*": ["./src/*"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
